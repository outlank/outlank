{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current file",
      "program": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current file (es6)",
      "preLaunchTask": "Compile current file using babel",
      "program": "${workspaceFolder}/.compiled/temp/single-file-debug.js"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Docker Daemon",
      "address": "localhost",
      "port": 13103,
      "restart": true,
      "sourceMaps": false,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": "/code",
      "protocol": "inspector"
    }
  ]
}
